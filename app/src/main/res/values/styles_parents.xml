<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Abbey.Base" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <!-- Disable material-elevation overlay -->
        <item name="elevationOverlayEnabled">false</item>

        <item name="roundSelector">@drawable/round_selector_dark</item>
        <item name="rectSelector">@drawable/rect_selector_dark</item>
        <item name="rectSelectorStrong">@drawable/rect_selector_strong_dark</item>
        <item name="emptyStateDrawable">@drawable/vd_vector_dark</item>

        <item name="dialogCornerRadius">@dimen/corner_radius_big</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Abbey.Base.Dark.BottomSheetDialog</item>
        <item name="popupMenuStyle">@style/Widget.MPM.Menu.Dark.RoundedPopUpMenuTheme</item>

        <item name="materialButtonStyle">@style/Widget.Abbey.Button</item>
        <item name="textInputStyle">@style/Widget.Abbey.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.Abbey.TabLayout</item>
        <item name="navigationViewStyle">@style/Widget.Abbey.NavigationView</item>

        <item name="colorPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSurface">@color/abbey_theme_dark_surface_color</item>
        <item name="colorSurfaceElevated">@color/abbey_theme_dark_surface_elevated_color</item>
        <item name="colorBackgroundFloating">
            @color/abbey_theme_dark_color_background_floating_color
        </item>
        <item name="android:listSelector">@null</item>
        <item name="colorError">@color/md_red_A100</item>

        <item name="android:textColorPrimary">@color/abbey_theme_dark_primary_text_color</item>
        <item name="android:textColorSecondary">@color/abbey_theme_dark_secondary_text_color</item>
        <item name="android:listDivider">@color/md_dark_dividers</item>

        <!-- For preferences theming -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="nowPlayingColor">@color/md_deep_purple_A100</item>
        <item name="imagesColor">@color/md_red_A100</item>
        <item name="audioColor">@color/md_green_A100</item>
        <item name="otherColor">@color/md_deep_orange_A100</item>

        <item name="defaultFooterColor">@color/md_grey_500</item>

    </style>

    <style name="Theme.Abbey.Base.Light" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="elevationOverlayEnabled">false</item>

        <item name="roundSelector">@drawable/round_selector</item>
        <item name="rectSelector">@drawable/rect_selector</item>
        <item name="rectSelectorStrong">@drawable/rect_selector_strong</item>
        <item name="emptyStateDrawable">@drawable/vd_vector</item>

        <item name="dialogCornerRadius">@dimen/corner_radius_big</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Abbey.Base.Light.BottomSheetDialog</item>
        <item name="popupMenuStyle">@style/Widget.MPM.Menu.RoundedPopUpMenuTheme</item>

        <item name="materialButtonStyle">@style/Widget.Abbey.Button</item>
        <item name="textInputStyle">@style/Widget.Abbey.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.Abbey.TabLayout</item>
        <item name="navigationViewStyle">@style/Widget.Abbey.NavigationView</item>


        <!-- just in case-->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorSurfaceElevated">@android:color/white</item>
        <item name="colorError">@color/md_red_A400</item>
        <item name="colorOnError">@android:color/white</item>

        <item name="android:textColorPrimary">@color/abbey_theme_light_primary_text_color</item>
        <item name="android:textColorSecondary">@color/abbey_theme_light_secondary_text_color</item>
        <item name="android:listDivider">@color/md_light_dividers</item>

        <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item> -->
        <item name="nowPlayingColor">@color/md_deep_purple_A400</item>
        <item name="imagesColor">@color/md_red_A400</item>
        <item name="audioColor">@color/md_green_A700</item>
        <item name="otherColor">@color/md_deep_orange_400</item>

        <item name="defaultFooterColor">@color/md_grey_900</item>
    </style>

    <style name="Theme.Abbey.Base.Black" parent="@style/Theme.Abbey.Base">
        <item name="elevationOverlayEnabled">false</item>

        <item name="colorSurface">@color/abbey_theme_black_surface_color</item>
        <item name="colorSurfaceElevated">@color/abbey_theme_black_surface_elevated_color</item>
        <item name="colorBackgroundFloating">
            @color/abbey_theme_black_color_background_floating_color
        </item>

        <item name="defaultFooterColor">@color/md_grey_800</item>
    </style>

    <style name="Theme.Abbey.Base.Light.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="materialButtonStyle">@style/Widget.Abbey.Button</item>
        <item name="bottomSheetStyle">@style/Widget.Abbey.RoundedBottomSheet</item>
        <item name="android:listDivider">@color/md_light_dividers</item>
    </style>

    <style name="Theme.Abbey.Base.Dark.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="materialButtonStyle">@style/Widget.Abbey.Button</item>
        <item name="bottomSheetStyle">@style/Widget.Abbey.RoundedBottomSheet</item>
        <item name="android:listDivider">@color/md_dark_dividers</item>
    </style>


    <!-- Widgets -->

    <style name="Widget.Abbey.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_small</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Abbey.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/rounded_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="android:background">?colorSurfaceElevated</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.Abbey.Item.Title</item>
        <item name="android:paddingStart">@dimen/default_item_margin</item>
        <item name="android:paddingEnd">@dimen/default_item_margin</item>
        <item name="tabMode">scrollable</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.Abbey.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="hintTextColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.Abbey.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="selectableItemBackground">@null</item>
    </style>

    <style name="Widget.Abbey.RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Widget.MPM.Menu.RoundedPopUpMenuTheme">
        <item name="mpm_paddingBottom">@dimen/default_item_margin</item>
        <item name="mpm_paddingTop">@dimen/default_item_margin</item>
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="Widget.MPM.Menu.Dark.RoundedPopUpMenuTheme">
        <item name="mpm_paddingBottom">@dimen/default_item_margin</item>
        <item name="mpm_paddingTop">@dimen/default_item_margin</item>
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <!-- TODO: Replace or get rid of all of these -->

    <style name="MusicProgressSliderParent">
        <item name="android:progressDrawable">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/slider_thumb</item>
    </style>

    <style name="ToolbarIcon">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>